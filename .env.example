# QuantMind MCP Server Configuration (Local Setup)
# Copy this file to .env and update with your actual values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# SQLite (recommended for local development)
DATABASE_URL=sqlite+aiosqlite:///./data/quantmind.db

# ============================================================================
# ALPHA VAULT CONFIGURATION
# ============================================================================

# Minimum Sharpe ratio for strategies in Alpha Vault
ALPHA_VAULT_MIN_SHARPE=1.5

# Minimum number of trades for strategy validation
ALPHA_VAULT_MIN_TRADES=100

# ============================================================================
# KNOWLEDGE BASE & ASSETS
# ============================================================================

# Path to research papers directory (relative or absolute)
RESEARCH_PAPERS_PATH=./assets/research_papers

# Path to prompts and templates directory (relative or absolute)
PROMPTS_PATH=./assets/prompts

# ============================================================================
# LOGGING
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional)
# LOG_FILE=./logs/quantmind.log
